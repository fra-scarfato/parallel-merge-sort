
# .clangd configuration for clangd language server
# Docs: https://clangd.llvm.org/config.html

CompileFlags:
  # Additional flags passed to the compiler for all files
  Add: [-Wall, -Wextra, -Werror, -std=c++20, -I./fastflow, -I., -pthread]
    # -isystem/path/to/external/include  # For external libs (optional)


Diagnostics:
  ClangTidy:         # Enable clang-tidy static analysis
    Add: modernize*
  UnusedIncludes: Strict # Warn about unused includes

Index:
  Background: true       # Enable background indexing for better search/completion
  StandardLibrary: 
    InsertStdIncludes: true  # Auto-add missing standard library includes

Hover:
  ShowAKA: true          # Show typedef expansions in hover tooltips

InlayHints:
  Enabled: true          # Show inline hints (param names, types, etc.)
